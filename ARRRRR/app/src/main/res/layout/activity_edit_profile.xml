<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text=" Personal Profile" />

            <!-- Name-->
            <ViewSwitcher
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/switcherName"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/clickable_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textlines"
                    android:padding="15dp"
                    android:text="Name"
                    android:onClick="TextViewClicked"
                    android:clickable="true"/>

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textlines"
                    android:padding="15dp"
                    android:hint="Please enter a new name"
                    android:inputType="text" />

            </ViewSwitcher>

            <!-- Phone number-->

            <ViewSwitcher
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/switcherNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/clickable_edit_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textlines"
                    android:padding="15dp"
                    android:text="Phone number"
                    android:onClick="TextViewClicked"
                    android:clickable="true"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/textlines"
                    android:padding="15dp"
                    android:hint="Please enter new phone number"
                    android:inputType="phone" />

            </ViewSwitcher>


            <!-- Gender -->
            <Button
                android:id="@+id/etGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:background="@drawable/textlines"
                android:elevation="0dp"
                android:gravity="left|center_vertical"
                android:onClick="clickGender"
                android:text="Gender"
                android:textColor="@android:color/darker_gray" />


            <!-- Address -->
            <Button
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:background="@drawable/textlines"
                android:elevation="0dp"
                android:gravity="left|center_vertical"
                android:onClick="clickAddress"
                android:text="Address"
                android:textColor="@android:color/darker_gray" />

            <!--Back to User Profile-->
            <Button
                android:id="@+id/btn_back_userProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:elevation="0dp"
                android:onClick="back_UserProfile"
                android:text="Back"
                android:textColor="@android:color/darker_gray" />

            <!--Save new information-->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:elevation="0dp"
                android:text="Submit"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>