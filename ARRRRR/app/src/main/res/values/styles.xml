<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black_background</item>
        <item name="colorPrimaryDark">@color/black_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/grey_subtitle</item>
    </style>

    <!-- Login Page Button -->
    <style name="ClassicButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="LoginText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="RegisterText" parent="LoginText">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ListLine" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="RegisterLine" parent="ListLine">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <!-- User Profile Button -->
    <style name="ShortButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- User Profile Edit Button -->
    <style name="LongButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/grey_text_real</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- User Profile Text View -->
    <style name="UserProfile_text" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/grey_text_real</item>
        <item name="android:layout_width">@dimen/padding_user_profile</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/userprofile_rounded_bg</item>
    </style>

    <!-- Activity with no Title -->
    <style name="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <!-- Dark Buttons -->
    <style name="Login_Button" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">#f65959</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Light EditTexts -->
    <style name="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="NormalText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>


    <style name="TitleText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <!-- Setting profile file head portrait-->
    <style name="setting_profilephoto_btn" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/grey_text_real</item>
    </style>

    <!-- Setting text-->
    <style name="SettingText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_text_real</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
